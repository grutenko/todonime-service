{
    "name": "grutenko/shikimori-api",
    "description": "API implementation for shikimori.one",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "grutenko",
            "email": "alex@grutenko.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "Grutenko\\Shikimori\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grutenko\\Shikimori\\Test\\": "test/phpunit/"
        }
    },
    "scripts": {
        "bump-minor-version": "./vendor/bin/bump_version bump --minor"
    },
    "minimum-stability": "stable",
    "require": {
        "ext-curl": "*",
        "php": ">=7.2",
        "ext-json": "*",
        "guzzlehttp/psr7": "*",
        "cartalyst/collections": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "quazardous/php-bump-version": "^1.0"
    }
}
